<div class="box">
  <div class="my-8 w-80 text-left">
    <% url = lesson.persisted? ? course_module_lesson_path(course, course_module, lesson) : course_module_lessons_path(course, course_module, lesson) %>
    <%= form_with(url: url, model:  lesson) do |form| %>
      <% if lesson.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(lesson.errors.count, "error") %> prohibited this lesson from being saved:</h2>

          <ul>
            <% lesson.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="my-8 text-sm" >
        <%= form.label :title, class: "text-sm font-medium" %>
        <%= form.text_field :title, class: "input-text mt-2" %>
      </div>

      <div class="my-8 text-sm" >
        <%= form.label :description, class: "text-sm font-medium" %>
        <%= form.text_area :description, class: "input-text mt-2" %>
      </div>

      <div class="my-8 text-sm" >
        <%= form.label :video_url, class: "text-sm font-medium" %>
        <%= form.text_field :video_url, class: "input-text mt-2" %>
      </div>

      <div class="my-8 text-sm" >
        <% text = lesson.persisted? ? "Update" : "Create" %>
        <%= form.submit text, class: "btn-default" %>
      </div>
    <% end %>
  </div>
</div>