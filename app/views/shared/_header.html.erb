<div class="header border p-2 flex">
  <div class="flex-auto content-center"> <%= link_to "BlackboardLMS", root_path %></div>
  <div class="flex-auto">
    <% if notice.present? %>
      <p class="p-2 text-xs border rounded w-fit my-2 mx-auto text-yellow-500"><%= notice %></p>
    <% end %>

    <% if alert.present? %>
      <p class="p-2 text-xs border rounded w-fit my-2 mx-auto text-red-500"><%= alert %></p>
    <% end %>
  </div>
  <div class="flex-auto text-right">
    <% if user_signed_in? %>
      <ul>
        <li><%= link_to 'Sign Out', destroy_user_session_path, data: { turbo_method: :delete }, class: "border rounded p-2 min-w-4 min-h-2 auto w-32 inline-block  text-center" %></li>
      </ul>
    <% else %>
      <p class="my-8 text-center">
        <%= link_to 'Sign in', new_user_session_path, class: "border rounded p-2 min-w-4 min-h-2 auto" %>
      </p>
    <% end %>
  </div>
</div>