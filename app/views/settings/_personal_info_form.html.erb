<div class="box w-80 text-left">
  <h1 class="font-semibold text-xl">Personal info</h1>
  <%= render "shared/components/notice" %>
  <%= form_with(model: current_user, url: settings_path, method: :put, data: { turbo_frame: "edit-settings-frame" }) do |form| %>
    <% if current_user.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(current_user.errors.count, "error") %> prohibited this course from being saved:</h2>

        <ul>
          <% current_user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="my-8 text-sm" >
      <%= form.label :phone, class: "text-sm font-medium" %>
      <%= form.text_field :phone, class: "input-text mt-2" %>
    </div>

    <div class="my-8 text-sm" >
      <%= form.label :name, class: "text-sm font-medium" %>
      <%= form.text_field :name, class: "input-text mt-2" %>
    </div>

    <div class="my-8 text-sm text-right">
      <%= form.button "Save Changes", class: "btn-default" %>
    </div>
  <% end %>
</div>
