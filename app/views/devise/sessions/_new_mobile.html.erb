<%= mobile_view do %>
  <%= render "devise/sessions/top_mobile" %>

  <div class="px-4 py-8">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-8">
        <h1 class="page-heading">Login</h1>
      </div>

      <div class="flex flex-col gap-4">
        <div class="input-group">
          <%= f.label :email, 'Email or Mobile Number', class: "label-text" %>
          <p class="mt-2">
            <%= f.email_field :email, class: "input-text", autofocus: true, autocomplete: "email" %>
          </p>
        </div>
        <div class="input-group">
          <%= f.label :password, class: "label-text" %>
          <p class="mt-2">
            <%= f.password_field :password, class: "input-text", autocomplete: "current-password" %>
          </p>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex gap-2 input-group">
            <%= f.check_box :remember_me, class: "input-check" %>
            <%= f.label :remember_me, 'Remember me', class: "label-text" %>
          </div>
        <% end %>

        <div class="my-8">
          <%= f.button class: "w-full btn-primary" do %>
            <span>Login</span>
          <% end %>
        </div>
      </div>
    <% end %>

    <div>
      <div class="mb-4 flex justify-between">
        <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "link-text" %><br/>
        <% end %>
        <a href="#" class="link-text">Login with OTP</a>
      </div>
      <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
        <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "link-text" %>
      <% end %>
    </div>
  </div>
<% end %>