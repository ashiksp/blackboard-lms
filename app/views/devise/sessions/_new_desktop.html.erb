<%= desktop_view do %>
  <div class="h-full columns-2 size-full">
    <%= render "devise/sessions/left_side_desktop" %>

    <div class="flex h-full items-center justify-center right-side">
      <div class="bg-white w-[528px]">
        <img src="/assets/login_page_logo_grey.png" alt="Superskill" class="mx-auto mb-12 h-10">
        <div class="rounded-lg p-8 login-box-shadow">
          <h1 class="my-8 page-heading">Login</h1>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="flex flex-col gap-6">
              <div class="input-group">
                <%= f.label :email, 'Email or Mobile Number', class: "label-text" %>
                <p class="mt-4">
                  <%= f.email_field :email, class: "input-text", autofocus: true, autocomplete: "email" %>
                </p>
              </div>
              <div class="input-group">
                <%= f.label :password, class: "label-text" %>
                <p class="mt-4">
                  <%= f.password_field :password, class: "input-text", autocomplete: "current-password" %>
                </p>
              </div>

              <% if devise_mapping.rememberable? %>
                <div class="flex gap-2 input-group">
                  <%= f.check_box :remember_me, class: "input-check" %>
                  <%= f.label :remember_me, 'Remember me', class: "label-text" %>
                </div>
              <% end %>

              <div>
                <%= f.button class: "w-full btn-primary" do %>
                  <span>Login</span>
                <% end %>
              </div>
            </div>
          <% end %>

          <div class="mt-6">
            <div class="flex justify-between">
              <p>
                <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                  <%= link_to "Forgot your password?", new_password_path(resource_name), class: "link-text" %><br/>
                <% end %>
              </p>
              <p><a href="#" class="link-text">Login with OTP</a></p>
            </div>
            <div class="mt-4">
              <p>
                <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
                  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "link-text" %>
                  <br/>
                <% end %>
              </p>
            </div>
          </div>
        </div>
        <hr class="mt-1 border-y-2 border-primary"/>
      </div>
    </div>
  </div>
<% end %>