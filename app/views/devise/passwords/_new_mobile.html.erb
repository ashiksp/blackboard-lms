<%= mobile_view do %>
  <%= render "devise/shared/top_mobile" %>
  <div class="px-4 py-6">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="mb-6">
        <h1 class="page-heading">Forgot password?</h1>
      </div>

      <div class="text-sm text-gray-700">
        <%= render "devise/shared/error_messages", resource: resource %>
      </div>

      <div class="flex flex-col gap-8">
        <div class="input-group">
          <label for="" class="label-text">No worries. We&apos;ll send you confirmation instructions.</label>
        </div>

        <div class="input-group">
          <%= f.label :email, class: "label-text" %>
          <p class="mt-4">
            <%= f.email_field :email, class: "input-text", autofocus: true, autocomplete: "email" %>
          </p>
        </div>

        <div class="mt-4">
          <%= f.button class: "btn-primary w-full" do %>
            <span>Reset password</span>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class="mt-6">
      <%= render "devise/shared/bottom_links" %>
    </div>
  </div>
<% end %>